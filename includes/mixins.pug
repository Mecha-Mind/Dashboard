mixin main_title(head,body, pic)
  div(class=`main-title text-center mb-4 mt-4 position-relative`)
    i(class=`fa-solid ${pic} fa-3x`)
    h3= head
    p(class="text-black-50 text-uppercase")= body

mixin feat_section(pic1,pic2,head,body)
  div(class="col-md-6 col-lg-4")
    .feat
      div(class="icon-holder position-relative")
        i(class=`fa-solid ${pic1} position-absolute bottom-0 number`)
        i(class=`fa-solid ${pic2} fa-3x position-absolute bottom-0 icon`)
      h4(class="mt-3 mb-3 text-uppercase")= head
      p(class="text-black-50 lh-lg")= body

mixin our_stuff(n, name, desc)
  div(class="col-md-6 col-lg-3")
    div(class="box bg-white")
      img(class="img-fluid" src=`./imgs/${n}.jpg` alt="")
      h4(class="text-light p-3")= name
      blockquote(class="text-black-50 p-3")= desc

mixin head_nav()
  li
    a(class="active p-10 rad-6" href="#", rel="noopener noreferrer")
      i(class="fa-brands fa-dashcube fa-fw")
      span Dashboard

mixin tickets_row(ic, color, numb, txt)
  div(class="box p-20 rad-6 fs-14 c-grey")
    i(class=`${ic} fa-2x mb-10 c-${color}`)
    span(class="d-block c-black fw-bold fs-25 mb-5")= numb
    = txt

mixin targets_row(color, icon, head, numb, pers)
  div(class=`target-row mb-20 center-flex ${color}`)
    div(class="icon center-flex")
      i(class=`fa-solid ${icon} fa-lg c-${color}`)
    .details
      span(class="fs-14 c-grey")= head
      span(class="d-block mt-5 mb-10 fw-bold")= numb
      div(class="progress p-rel")
        span(class=`bg-${color} ${color}` style=`width: ${pers}`)
          span(class=`bg-${color}`)= pers

mixin latest_news(img, head, body, foot)
  div(class="news-row d-flex al-c")
    img(src=`${img}`, alt="sora", srcset="")
    div(class="info")
      h3= head
      p(class="c-grey fs-14 m-0")= body
    div(class="btn-shape fs-13 bg-eee label")= foot

mixin task-row(head,body,ic)
  div(class="task-row between-flex")
    .info
      h3(class="mt-0 mb-5 fs-15")= head
      p(class="m-0 c-grey")= body
    i(class=`fa-regular ${ic} delete`)

mixin upload-row(src, fname, author, size)
  li(class="between-flex pb-10 mb-10")
    div(class="d-flex al-c")
      img(class="mr-10 w-full" src=`${src}`, alt="", srcset="")
      div(class="")
        p= fname
        span(class="fs-15 c-grey")= author
    p(class="fs-13 btn-shape bg-eee")= size

mixin reminder-list(bgColor, color, head, body)
  li(class="d-flex al-c mt-15")
    span(class=`key ${bgColor} mr-15 d-block rad-half`)
    div(class=`pl-15 ${color}`)
      p(class="fs-14 fw-bold mt-0 mb-5")= head
      span(class="fs-13 c-grey")= body

mixin social-media-r(name, iconName, head, react)
  div(class=`box ${name} p-15 p-rel mb-10 between-flex`)
    i(class=`fa-brands ${iconName} fa-2x center-flex c-white h-full`)
    span= head
    a(class="fs-13 btn-shape c-white" href="#")= react

mixin project-rows(name, date, coName, prize, img, stColor, st)
  tr
    td= name
    td= date
    td= coName
    td= prize
    td
      img(src=`${img}`, alt="", srcset="")
      img(src=`${img}`, alt="", srcset="")
      img(src=`${img}`, alt="", srcset="")
      img(src=`${img}`, alt="", srcset="")
    td
      span(class=`label btn-shape bg-${stColor} c-white`)= st